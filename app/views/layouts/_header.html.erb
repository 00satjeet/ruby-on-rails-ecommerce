<!DOCTYPE html>
<html>
	<head>
		<title>Ruby on Rails Ecommerce</title>
		<%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" %>
		<%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" %>
		<%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.7/yeti/bootstrap.min.css" %>
		<%= stylesheet_link_tag "application", media: "all" %>
	</head>
	<body class="override">
		<nav role="navigation" class="navbar navbar-inverse <% if current_page?("/") %>navbar-fixed-top"<% end %>">
			<div class="container">
				<div class="navbar-header">
					<button type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" class="navbar-toggle collapsed">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a href="/" class="navbar-brand"> 
						<img src="<%= asset_path("logo.png") %>" width="23" class="d-ib m-r">
						Ruby on Rails Ecommerce
					</a>
				</div>
				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to "Products", controller: "products" %></li>
						<% if current_user %>
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dashboard <span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li><a href="/user/account">Account</a></li>
									<li><a href="/products/user">Manage Products</a></li>
									<li><a href="/products/new">New Product</a></li>
								</ul>
							</li>
							<li><a href="/user/logout">Logout</a></li>
						<% else %>
							<li><a href="/user/register">Register</a></li>
							<li><a href="/user/login">Login</a></li>
						<% end %>
					</ul>
				</div>
			</div>
		</nav>